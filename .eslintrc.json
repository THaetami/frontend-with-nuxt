{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "plugin:@typescript-eslint/recommended",
    "@nuxtjs/eslint-config-typescript"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "@typescript-eslint"
  ],
  "rules": {
    "indent": ["error", 2], // Mengatur indentasi menggunakan 3 spasi
    "vue/html-indent": ["error", 2], // Mengatur indentasi HTML Vue menggunakan 3 spasi
    "@typescript-eslint/indent": ["error", 2]
  }
}